<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivities.MovieListActivity">

    <TextView
        android:id="@+id/movieListTV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/standard_margin"
        android:text="Movies"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        app:fontFamily="cursive" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movieListRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/movieListTV_title"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:paddingBottom="20dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_addsvg"
        android:contentDescription="@string/submit"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/titleBackground"
        />

</RelativeLayout>